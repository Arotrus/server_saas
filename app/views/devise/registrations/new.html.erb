<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <% if params[:plan] == '2' %>
      <hr>
      <h1 class="text-center">Pro Account</h1>
      <hr>
    <% else %>
      <hr>
      <h1 class="text-center">Free Account</h1>
      <hr>
    <% end %>
  </div>
  <div class="col-md-4 col-md-offset-4">
    <div class="well">
      <h2><strong>Sign up</strong></h2>
      
      <% if params[:plan] == '2' %>
        <%= render 'pro_form' %>
      <% else %>
        <%= render 'basic_form' %>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>